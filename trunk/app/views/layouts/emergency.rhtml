<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
    <title><%= @page_title %></title>
    <%= stylesheet_link_tag "common" %>
    
    <%= javascript_include_tag "main", "layers", "utils" %>
    <%= javascript_include_tag :defaults %>
  </head>
  
  <body>          
    <%= render :partial => 'layouts/includes/header' %>    
    
    <div id="submenu">
      <div style="float: left">
		<a href="/emergency"<%= ' class="current"' if controller.action_name == 'index' %>>Drivers</a>&nbsp; | &nbsp;<a href="/emergency/contacts/<%= @current_driver.id if @current_driver %>"<%= ' class="current"' if controller.action_name == 'contacts' %>>Contacts</a>&nbsp; | &nbsp;<a href="/emergency/info/<%= @current_driver.id if @current_driver %>"<%= ' class="current"' if controller.action_name == 'info' %>>Information</a>
      </div>
           
      <div style="float: right">             
		<%if controller.action_name == 'index' %>
			<a href="/emergency/new_driver" title="Add a new driver">Add A New Driver</a>
		<% elsif controller.action_name == 'contacts' and @current_driver %>
			<a href="/emergency/new_contact/<%= @current_driver.id %>" title="Create new emergency contact">Add A New Emergency Contact</a>
		<% elsif controller.action_name == 'info' and @current_driver %>
			<a href="/emergency/update_info/<%= @current_driver.id %>" title="Update emergency information">Update Emergency Information</a>
		<%end%>
      </div>
      
      <div style="clear:both"></div>
    </div>
    
    <div id="content">
      <%= yield %>
    </div>
    
    <%= render :partial => 'layouts/includes/footer' %>
  </body>
</html>
