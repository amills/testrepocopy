
<Gauge2 coordWidth="1000" coordHeight="1000" left="0" top="0" bottom="0" right="0">


    <!-- Background -->
    <Gauge2CircularBorder width="1000" height="1000" centerX="500" centerY="500" strokeWidth="0">
        <Gauge2CircularBorder.Filler>
            <Gauge2RingGradientFiller color1="#5F5F55" color2="#9F9F90" thickness="10" highlightCenter="50"/>
        </Gauge2CircularBorder.Filler>
    </Gauge2CircularBorder>

    <Gauge2CircularBorder width="850" height="820" centerX="500" centerY="500" strokeWidth="10" stroke="#9F9F78">
        <Gauge2CircularBorder.Filler>
            <Gauge2RingGradientFiller color1="#EEEECC" color2="#CCCCAA" xpos="60" ypos="60" thickness="15" highlightCenter="100"/>
        </Gauge2CircularBorder.Filler>
    </Gauge2CircularBorder>


	<!-- Range -->
	<Gauge2RadialRange centerX="500" centerY="500" width="1000" height="1000" startAngle="-45" endAngle="315">

		<!-- Scale -->
		<Gauge2RadialScale radius="430" startValue="0" endValue="90">
			<Gauge2RadialScaleSection sectionWidth="30" color="#AAAA99" stroke="gray" strokeWidth="3" radius="320" startValue="0" endValue="90"/>
		</Gauge2RadialScale>

		<!-- Ticks -->
		<Gauge2RadialTicks tickWidth="1" tickLength="28" color="gray" tickCount="21" radius="320"/>
		<Gauge2RadialTicks tickWidth="8" tickLength="28" color="gray" tickCount="11" radius="320"/>

	</Gauge2RadialRange>

	<!-- Range -->
	<Gauge2RadialRange centerX="500" centerY="500" width="1000" height="1000" startAngle="-45" endAngle="279">

		<!-- Scale -->
		<Gauge2RadialScale font="45" foreColor="#000000" radius="370" startValue="0" endValue="90" labelCount="10">

            <!-- Needle -->
            <Gauge2RadialNeedle id="needle" value="35" stroke="#BB2222" strokeWidth="1"
                                innerRadius="0" innerWidth="50"
                                outerRadius="320" outerWidth="5">
                <Gauge2RadialNeedle.Filler>
                    <Gauge2RadialGradientFiller color1="#CC1111" color2="#FF6666"/>
                </Gauge2RadialNeedle.Filler>
            </Gauge2RadialNeedle>

		</Gauge2RadialScale>


        <!-- Cap -->
        <Gauge2BasicCap width="200" height="200">
            <Gauge2BasicCap.Filler>
                   <Gauge2RingGradientFiller color1="#565646" color2="#B8B8A8" thickness="20" highlightCenter="0"/>
            </Gauge2BasicCap.Filler>
        </Gauge2BasicCap>

        <Gauge2BasicCap width="160" height="160">
            <Gauge2BasicCap.Filler>
                   <Gauge2LinearGradientFiller color1="#767666" color2="#B8B8A8" angle="45"/>
            </Gauge2BasicCap.Filler>
        </Gauge2BasicCap>


	</Gauge2RadialRange>

</Gauge2>
		