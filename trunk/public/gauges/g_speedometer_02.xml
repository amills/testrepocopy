
<Gauge2 coordWidth="1000" coordHeight="1000" left="0" top="0" bottom="0" right="0">


    <!-- Background -->
    <Gauge2CircularBorder width="1000" height="1000" centerX="500" centerY="500" strokeWidth="0">
        <Gauge2CircularBorder.Filler>
            <Gauge2RingGradientFiller color1="#5F5F5F" color2="#9F9F9F" thickness="8" highlightCenter="60"/>
        </Gauge2CircularBorder.Filler>
    </Gauge2CircularBorder>

    <Gauge2CircularBorder width="860" height="860" centerX="500" centerY="500" strokeWidth="10" stroke="#444444">
        <Gauge2CircularBorder.Filler>
            <Gauge2RingGradientFiller color1="#555555" color2="#333333" xpos="50" ypos="50" thickness="15" highlightCenter="100"/>
        </Gauge2CircularBorder.Filler>
    </Gauge2CircularBorder>


    <!--Label -->
    <Gauge2Label text="MPH" font="40" foreColor="#BBBBBB" y="750" x="500"/>

    <!-- Range -->
    <Gauge2RadialRange centerX="500" centerY="500" width="1000" height="1000" startAngle="-120" endAngle="120">

        <!-- Ticks -->
        <Gauge2RadialTicks tickWidth="8" tickLength="60" color="#BBBBBB" tickCount="17" radius="280"/>

        <!-- Scale -->
        <Gauge2RadialScale font="35 Arial Black" foreColor="#BBBBBB" radius="350.5" startValue="0" endValue="160" labelCount="17">

            <!-- Needle -->
            <Gauge2RadialNeedle id="needle" value="55" stroke="#333355" strokeWidth="1"
                                innerRadius="-100" innerWidth="30"
                                outerRadius="280" outerWidth="10">
                <Gauge2RadialNeedle.Filler>
                    <Gauge2RadialGradientFiller color1="#557799" color2="#7799AA"/>
                </Gauge2RadialNeedle.Filler>
            </Gauge2RadialNeedle>

        </Gauge2RadialScale>


        <!-- Cap -->
        <Gauge2BasicCap width="140" height="140">
            <Gauge2BasicCap.Filler>
                   <Gauge2RingGradientFiller color1="#464646" color2="#A8A8A8" thickness="20" highlightCenter="0"/>
            </Gauge2BasicCap.Filler>
        </Gauge2BasicCap>

        <Gauge2BasicCap width="100" height="100">
            <Gauge2BasicCap.Filler>
                   <Gauge2LinearGradientFiller color1="#666666" color2="#A8A8A8" angle="45"/>
            </Gauge2BasicCap.Filler>
        </Gauge2BasicCap>


    </Gauge2RadialRange>

</Gauge2>
        